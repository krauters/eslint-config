{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "dist",
		"sourceMap": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"verbatimModuleSyntax": true,
		"allowJs": true
	},
	"include": [
		"**/*.ts",
		"**/*.js",
		"examples/*.ts"
	],
	"exclude": ["node_modules", ".vscode"]
}
