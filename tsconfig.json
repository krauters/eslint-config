{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "examples"
  ],
  "exclude": ["node_modules", ".vscode"]
}
