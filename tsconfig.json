{
  "compilerOptions": {
    "target": "ES2022",                // ECMAScript target version
    "module": "CommonJS",              // CommonJS module format
    "outDir": "dist",                  // Output directory for compiled JS
    "sourceMap": true,                 // Generate source maps for debugging
    "moduleResolution": "Node",        // Use Node.js module resolution
    "esModuleInterop": true,           // Enable ES module compatibility
    "forceConsistentCasingInFileNames": true,  // Ensure consistent file name casing
    "strict": true,                    // Enable all strict type checking options
    "skipLibCheck": true,              // Skip type checking of declaration files
    "declaration": true,               // Generate .d.ts declaration files
    "declarationMap": true,            // Optional: Generate source maps for .d.ts files
    "verbatimModuleSyntax": true,      // Keep the syntax of module imports
    "allowJs": true                    // Allow JavaScript files
  },
  "include": [
    "*.ts",                            // Include all TypeScript files
	"*.js",                            // Include all TypeScript files
	"**/*.ts",                         // Include all TypeScript files
  ],
  "exclude": [
    "node_modules",                    // Exclude node_modules folder
    ".vscode",                         // Exclude .vscode folder
    "dist",                            // Exclude the dist folder (so you don't recompile outputs)
	"examples"
  ]
}
