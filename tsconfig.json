{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "dist",
		"sourceMap": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"rootDir": "./",
		"strictNullChecks": true,
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"**/*.ts",
		"**/*.js"
	],
	"exclude": [
		"node_modules",
		".vscode",
		"dist",
		"examples"
	]
}
